<?import javafx.scene.text.Text?>

<AnchorPane maxHeight="-Infinity" 
            maxWidth="-Infinity" 
            minHeight="-Infinity" 
            minWidth="-Infinity" 
            prefHeight="650.0" 
            prefWidth="1000.0" 
            styleClass="root" 
            stylesheets="@Pemesanan.css" 
            xmlns="http://javafx.com/javafx/23.0.1" 
            xmlns:fx="http://javafx.com/fxml/1" 
            fx:controller="PesanHasil.PesanHasilController">
   <children>
      <ImageView fitHeight="650.0" fitWidth="1000.0" pickOnBounds="true" preserveRatio="true">
         <image>
            <Image url="/resources/Background.jpg" />
         </image>
      </ImageView>
      <Label layoutX="426.0" layoutY="87.0" text="Pendaftaran">
         <font>
            <Font name="Berlin Sans FB Demi Bold" size="25.0" />
         </font>
      </Label>
      <TextField fx:id="NamaLengkap" layoutX="145.0" layoutY="137.0" prefHeight="30.0" prefWidth="199.0" text="Nama Lengkap" />
      <TextField fx:id="Alamat" layoutX="649.0" layoutY="137.0" prefHeight="30.0" prefWidth="199.0" text="Alamat" />
      <TextField fx:id="TTL" layoutX="397.0" layoutY="137.0" prefHeight="30.0" prefWidth="199.0" text="Tempat tanggal lahir" />
      <TextField fx:id="nomorTelepon" layoutX="145.0" layoutY="191.0" prefHeight="30.0" prefWidth="199.0" text="Nomor Telepon" />
      <Text layoutX="142.0" layoutY="266.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Gender" />
      <RadioButton fx:id="male" layoutX="206.0" layoutY="253.0" mnemonicParsing="false" onAction="#klikRadioButton" text="Male">
         <toggleGroup>
            <ToggleGroup fx:id="Gender" />
         </toggleGroup></RadioButton>
      <RadioButton fx:id="female" layoutX="289.0" layoutY="253.0" mnemonicParsing="false" onAction="#klikRadioButton" selected="true" text="Female" toggleGroup="$Gender" />
      <TextArea fx:id="keluhanPasien" layoutX="142.0" layoutY="308.0" prefHeight="117.0" prefWidth="702.0" text="Tulis keluhan anda..." />
      <ComboBox fx:id="pilihRumahSakit" layoutX="145.0" layoutY="478.0" prefWidth="150.0" promptText="Pilih Rumah Sakit" />
      <ComboBox fx:id="pilihDokter" layoutX="145.0" layoutY="435.0" prefWidth="150.0" promptText="Pilih Dokter" />
      <Button fx:id="submitButton" layoutX="432.0" layoutY="434.0" mnemonicParsing="false" prefHeight="26.0" prefWidth="150.0" onAction="#handleSubmit" styleClass="submit-button" text="Submit" />
      <Label fx:id="label" layoutX="142.0" layoutY="279.0" prefHeight="18.0" prefWidth="73.0" />
      <Button fx:id="buttonBack" layoutX="14.0" layoutY="602.0" mnemonicParsing="false" prefHeight="26.0" prefWidth="60.0" styleClass="nav-item" onAction="#backKePilihFitur" text="Back" />
   </children>
</AnchorPane>
